{
  "manifest_version": 3,
  "name": "Quick Note",
  "description": "Instantly capture your thoughts with a simple Ctrl+A. Just write it down.",
  "version": "1.0",
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "action": {
    "default_title": "Just write it down.",
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/icon16.png",
      "32": "public/icon32.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Open extension"
    }
  },
  "permissions": [
    "storage"
  ]
}